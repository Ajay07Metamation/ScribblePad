<Window x:Class="ScribblePad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScribblePad"
        mc:Ignorable="d"
        Title="SCRIBBLE PAD" Background="Transparent" Height="450" Width="800" Closing="Window_Closed" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.2"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="Aqua"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    <Menu Grid.Row="0" Background="White">
        <MenuItem Header="_File">
            <MenuItem Header="_New" Click="New_Click"/>
            <MenuItem Header="_Open..." Click="Open_Click"/>
            <MenuItem Header="_Save" Click="Save_Click"/>
            <MenuItem Header="_SaveAs..." Click="SaveAs_Click"/>
            <MenuItem Header="_Exit" Click="Exit_Click"/>
        </MenuItem>
    </Menu>
    <WrapPanel x:Name="mPanel" Grid.Row="1" DockPanel.Dock="Top" Height="40" Background="AliceBlue">
        <ToggleButton x:Name="mPickTool" Style="{StaticResource ButtonStyle}" Click="OnPick_Click" Margin="10,5" ToolTip="Pick">
            <Image Source="Icons/cursor.png"/>
        </ToggleButton>
        <ToggleButton x:Name="mScribbleTool" Style="{StaticResource ButtonStyle}" Click="OnPen_Clicked" Margin="10,5" ToolTip="Scribble">
            <Image Source="Icons/pen.png"/>
        </ToggleButton>
        <ToggleButton x:Name="mLineTool" Style="{StaticResource ButtonStyle}" Click="OnLine_Clicked" Margin="5,5" ToolTip="Line" >
            <Image Source="Icons/line.png"/>
        </ToggleButton>
        <ToggleButton x:Name="mCLineTool" Style="{StaticResource ButtonStyle}" Click="OnCLine_Clicked" Margin="5,5" ToolTip="Line" >
            <Image Source="Icons/CLines.png"/>
        </ToggleButton>
        <ToggleButton x:Name="mRectangleTool" Style="{StaticResource ButtonStyle}" Click="OnRectangle_Clicked" Margin="5,5" ToolTip="Rectangle">
            <Image Source="Icons/rectangle.png"/>
        </ToggleButton>
        <ToggleButton x:Name="mEllipseTool" Style="{StaticResource ButtonStyle}" Click="OnEllipse_Clicked" Margin="10,5" ToolTip="Ellipse">
            <Image Source="Icons/ellipse.png"/>
        </ToggleButton>
        <ToggleButton x:Name="mEraser" Style="{StaticResource ButtonStyle}" Click="OnEraser_Clicked" Margin="5,5" ToolTip="Eraser" >
            <Image Source="Icons/eraser.png"/>
        </ToggleButton>
        <ToggleButton x:Name="mUndo" Style="{StaticResource ButtonStyle}" Click="OnUndo_Clicked" Margin="5,5" ToolTip="Undo">
            <Image Source="Icons/undo.png"/>
        </ToggleButton>
        <ToggleButton x:Name="mRedo" Style="{StaticResource ButtonStyle}" Click="OnRedo_Clicked" Margin="5,5" ToolTip="Redo">
            <Image Source="Icons/redo.png"/>
        </ToggleButton>
        <ToggleButton x:Name="mClear" Style="{StaticResource ButtonStyle}" Click="OnClear_Clicked" Margin="5,5" ToolTip="Clear">
            <Image Source="Icons/clear.png"/>
        </ToggleButton>
        <TextBlock Text="Thickness : " Margin="5,10"/>
        <ComboBox x:Name="mThickness" VerticalAlignment="Center" Width="50" Margin="5"
                              SelectionChanged="OnThickness_SelectionChanged"/>
        <ToggleButton x:Name="mColourChange" Style="{StaticResource ButtonStyle}" Click="OnColourChange_Clicked" Margin="10,5" ToolTip="Color">
            <Image Source="Icons/paint-bucket.png"/>
        </ToggleButton>
    </WrapPanel>
    <Canvas x:Name="mDisplay" Grid.Row="2" Background="Transparent" MouseDown="Drawing_MouseDown" MouseMove="Drawing_MouseMove" PreviewKeyDown="mDisplay_PreviewKeyDown"/>
    </Grid>
</Window>
